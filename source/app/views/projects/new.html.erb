<div class="containers hall-building">
  <div class="gradient-filter">
    <header class="title">
      <h1>Create a New Project</h1>
    </header>
    <section class="instructor-dashboard-projects">
      <%= form_with(model: @project, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :due_date %>
          <%= form.date_select :due_date, start_year: Date.current.year, end_year: Date.current.year + 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :maximum_team_size %>
          <%= form.select :maximum_team_size, (1..10).to_a, { prompt: "Select Maximum Team Size" }, class: "form-control" %>
        </div>

        <%= form.submit "Create Project", class: "button primary" %>
      <% end %>
    </section>
  </div>
</div>
