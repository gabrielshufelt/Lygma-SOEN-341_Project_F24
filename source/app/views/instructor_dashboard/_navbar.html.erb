<div class="nav-signedin">
  <div class="nav-signedin-logo">
    <%= image_tag 'real ratings.svg', alt: 'Real Rating Logo', class: 'd-inline-block align-text-top', size: '200x40' %>
  </div>

  <div class="profile-picture">
    <% if current_user.profile_picture.attached? %>
      <%= image_tag current_user.profile_picture, alt: "#{current_user.first_name} #{current_user.last_name}", class: 'profile-picture-img', size: '80x80' %>
    <% else %>
      <%= image_tag 'default_pfp.png', alt: 'Default Profile Picture', class: 'profile-picture-img', size: '80x80' %>
    <% end %>
  </div>
  
  <div class="nav-signedin-options">
    <% if @selected_course && @selected_course.id %>
      <%= link_to course_selection_index_path, class: "nav-signedin-link" do %>
        <i class="fa-solid fa-exchange-alt"></i> Change Course
      <% end %>

      <%= link_to course_instructor_dashboard_index_path(course_id: @selected_course.id), class: "nav-signedin-link #{'active' if current_page?(course_instructor_dashboard_index_path(course_id: @selected_course.id))}" do %>
        <i class="fa-solid fa-bars"></i> Dashboard
      <% end %>

      <%= link_to projects_instructor_dashboard_index_path(course_id: @selected_course.id), class: "nav-signedin-link #{'active' if current_page?(projects_instructor_dashboard_index_path(course_id: @selected_course.id))}" do %>
        <i class="fa-solid fa-folder-open"></i> Projects
      <% end %>

      <%= link_to teams_instructor_dashboard_index_path(course_id: @selected_course.id), class: "nav-signedin-link #{'active' if current_page?(teams_instructor_dashboard_index_path(course_id: @selected_course.id))}" do %>
        <i class="fa-solid fa-users"></i> Teams
      <% end %>

      <%= link_to results_instructor_dashboard_index_path(course_id: @selected_course.id), class: "nav-signedin-link #{'active' if current_page?(results_instructor_dashboard_index_path(course_id: @selected_course.id))}" do %>
        <i class="fa-solid fa-chart-simple"></i> Results
      <% end %>

      <%= link_to settings_instructor_dashboard_index_path(course_id: @selected_course.id), class: "nav-signedin-link #{'active' if current_page?(settings_instructor_dashboard_index_path(course_id: @selected_course.id))}" do %>
        <i class="fa-solid fa-gear"></i> Settings
      <% end %>
    <% end %>
    
    <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "nav-signedin-link" do %>
      <i class="fa-solid fa-right-from-bracket"></i> Sign Out
    <% end %>
  </div>
</div>
