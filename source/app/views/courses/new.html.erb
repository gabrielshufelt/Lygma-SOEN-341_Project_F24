<div class="containers">
  <div class="gradient-filter">
    <div class="simple-form full">
      <h2>Create a New Course</h2>
      
      <%= form_with(model: @course, local: true) do |form| %>
        <% if @course.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
            <ul>
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="fields">
          <div class="full">
            <%= form.label :code %>
            <%= form.text_field :code, placeholder: "e.g., COEN 244, SOEN 341, ENGR 233" %>
          </div>
        </div>

        <div class="fields">
          <div class="full">
            <%= form.label :title %>
            <%= form.text_field :title, placeholder: "e.g., Software Engineering Processes, Advanced Applied Calculus" %>
          </div>
        </div>

        <%= form.hidden_field :instructor_id, value: current_user.id %>

        <div class="actions">
          <%= form.submit "Create Course", class: "button primary" %>
        </div>
      <% end %>

      <%= link_to 'Back to Course Selection', course_selection_index_path, class: "button secondary" %>
    </div>
  </div>
</div>
