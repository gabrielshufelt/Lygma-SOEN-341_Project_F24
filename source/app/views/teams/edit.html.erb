<%= turbo_page_requires_reload %>
<div class="title">
  <h1>Edit team</h1>
</div>
<div style="display: flex; flex-direction: row">
  <div style="width: 50%">
    <%= render "form", team: @team %>
  </div>
  <div style="width: 50%">
    <% if current_user.instructor? %>
      <%= turbo_frame_tag 'edit_members_form' do %>
        <%= render 'edit_members_form', available_students: @available_students %>
      <% end %>
    <% end %>
  </div>
</div>
