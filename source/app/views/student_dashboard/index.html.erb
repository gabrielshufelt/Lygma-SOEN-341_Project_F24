<% content_for :navbar do %>
  <%= render 'navbar' %>
<% end %>

<h1>Student Dashboard</h1>

<h2>Upcoming Evaluations</h2>
<% if @upcoming_evaluations.any? %>
  <ul>
    <% @upcoming_evaluations.each do |evaluation| %>
      <li>
        Project: <%= evaluation.project.name %>
        Due Date: <%= evaluation.due_date %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No upcoming evaluations.</p>
<% end %>

<h2>Average Ratings</h2>
<ul>
  <li>Conceptual: <%= @avg_ratings[:conceptual].round(2) %></li>
  <li>Cooperation: <%= @avg_ratings[:cooperation].round(2) %></li>
  <li>Practical: <%= @avg_ratings[:practical].round(2) %></li>
  <li>Work Ethic: <%= @avg_ratings[:work_ethic].round(2) %></li>
</ul>
