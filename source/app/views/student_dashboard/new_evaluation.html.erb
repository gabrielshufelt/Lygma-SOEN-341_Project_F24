<div class="containers hall-building">
  <div class="gradient-filter">
    <header class="section one eval">
      <h1>New Evaluations</h1>
    </header>
    <section class="section">
      <% if @evaluatees.empty? %>
        <p>No pending evaluations found.</p>
      <% else %>
        <% @evaluatees.each do |evaluatee| %>
          <%= render 'partials/collapsible_box',
            title: "#{evaluatee[:name]} - #{evaluatee[:project_title]}",
            collapsed: true,
            content: render('evaluation_form', evaluatee: evaluatee)
          %>
        <% end %>
      <% end %>
    </section>
  </div>
</div>
