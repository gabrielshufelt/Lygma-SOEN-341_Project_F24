<div class="nav-signedin">
    <div class="nav-signedin-logo">
        <%= image_tag 'real ratings.svg', alt: 'Real Rating Logo', class: 'd-inline-block align-text-top', size: '200x40' %>
    </div>
    <div class="nav-signedin-options">
        <%= link_to student_path , class: "nav-signedin-link #{'active' if current_page?(student_path)}" do %>
            <i class="fa-solid fa-bars"></i> Dashboard
        <% end %>

        <%= link_to student_teams_path , class: "nav-signedin-link #{'active' if current_page?(student_teams_path)}" do %>
            <i class="fa-solid fa-users"></i> Teams
        <% end %>

        <%= link_to student_results_path , class: "nav-signedin-link #{'active' if current_page?(student_results_path)}" do %>
            <i class="fa-solid fa-chart-simple"></i> Results
        <% end %>

        <%= link_to student_feedback_path , class: "nav-signedin-link #{'active' if current_page?(student_feedback_path)}" do %>
            <i class="fa-solid fa-message"></i> Feedback
        <% end %>
        
        <%= link_to student_settings_path , class: "nav-signedin-link #{'active' if current_page?(student_settings_path)}" do %>
            <i class="fa-solid fa-gear"></i> Settings
        <% end %>
        
        <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete } , class: "nav-signedin-link" do %>
            <i class="fa-solid fa-right-from-bracket"></i> Sign Out
        <% end %>
    </div>
</div>